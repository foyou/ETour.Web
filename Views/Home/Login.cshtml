@{
    ViewBag.Title = "会员登录";
    Layout = string.Empty;
}
@model ETour.Web.Models.LoginModel
<!DOCTYPE html>
<!--[if (gte IE 9)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!-->
<html class="ie">
<!--<![endif]-->
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="stylesheet" href="/css/main.css?v=1" />
    <meta content="telephone=no" name="format-detection" />
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
    <link rel="stylesheet" type="text/css" href="/css/findpw.css" />
    @*<script src="~/Scripts/js/zepto.js"></script>*@
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <div id="headerview" style="height: 48px;">
        <header style="position: relative">
            <h1>会员登录</h1>
            <i class="header_r" id="btnReg" onclick="javascript:location.href='Register'">注册</i><i class="returnico i_bef" id="c-ui-header-return" onclick="javascript:history.back(-1);"></i>
        </header>
    </div>
    <div class="h100" id="main">
        <div class="main-frame">
            <div class="main-viewport">
                <div class="sub-viewport" id="id_viewport2" page-id="153001" page-url="login" style="">
                    <section>
                        <div id="loginType" class="login_tab" style="display: none;">
                            <span id="login1" class="current tab_login" for="login">普通登录</span>
                            <span id="login2" class="tab_login" for="dylogin">手机动态密码登录</span>
                            <i></i>
                        </div>
                        <div id="login">
                            <form id="loginform"  data-ajax="true" action="@Url.Action("Login", "Home")" method="post">
                                <ul class="login_box">
                                    <li>
                                        <label>登录名</label>
                                        <div class="clear-input-box">
                                            @Html.TextBoxFor(x => x.UserName, new { placeholder = "用户名/手机/邮箱/卡号", tabindex = "1", maxlength = "30", autofocus = "" })
                                            <a href="javascript:;" class="clear-input " style="display: none;"><span></span></a>
                                        </div>
                                    </li>
                                    <li>
                                        <label>密码</label>
                                        <div class="clear-input-box">
                                            @Html.PasswordFor(x => x.Password, new { placeholder = "6-20位字母、数字和符号", tabindex = "2", required = "", maxlength = "20", @class = "li_input" })
                                            <a href="javascript:;" class="clear-input " style="display: none;"><span></span></a>
                                        </div>
                                    </li>
                                </ul>
                                <div style="clear: both;">
                                    <a id="forgetPwd" href="javascript:location.href='/';">返回首页</a>
                                    <label for="c1" class="cbox">
                                        &nbsp;
                                    </label>
                                </div>
                                <div class="btn_box">
                                    <button id="submit" type="submit" class="g_btn_s">登录</button>
                                </div>
                                @Html.AntiForgeryToken()
                            </form>
                        </div>
                        <div id="dylogin" style="display: none">
                            <ul class="login_box">
                                <li>
                                    <label>手机号</label>
                                    <div class="clear-input-box">
                                        <input type="tel" maxlength="11" value="" required="" tabindex="1" id="mobile"><a href="javascript:;" class="clear-input " style="display: none;"><span></span></a>
                                        <span class="input_delete"></span>
                                    </div>
                                </li>
                                <li style="display: none;" id="dynamicVcode">
                                    <label>验证码</label>
                                    <div style="margin-right: 80px">
                                        <input placeholder="请输入验证码（必填）" id="DynamicVcodeInput" tabindex="3" maxlength="6">
                                        <img style="height: 39px; width: 100px" src="" id="dynamicVcodeImg">
                                    </div>
                                </li>
                            </ul>
                            <div class="btn_box">
                                <button id="getDyCode" class="g_btn_s">获取动态密码</button>
                            </div>
                        </div>
                        <div id="thdLogin" class="login_other" style="display: none;">
                            <div class="or">或</div>
                            <ul>
                                <li class="ico_weibo">
                                    <div id="weibo">微博登录</div>
                                </li>
                                <li class="ico_qq">
                                    <div id="qq">QQ登录</div>
                                </li>
                            </ul>
                        </div>
                    </section>
                </div>
            </div>
            <div class="main-state"></div>
        </div>
    </div>
    <div class="bottom">&copy;&nbsp;ETour</div>
    <script type="text/javascript">
        $(function () {
            $(".tab_login").click(function () {
                $(".tab_login").removeClass("current");
                var div = $(this).addClass("current").attr("for");
                if (div == "dylogin") {
                    $("#login").hide();
                    $("#dylogin").show();
                } else {
                    $("#dylogin").hide();
                    $("#login").show();
                }
            });
        });
    </script>
</body>
</html>
